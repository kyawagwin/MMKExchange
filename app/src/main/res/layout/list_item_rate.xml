<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="64dp">

    <ImageView
        android:contentDescription="Country"
        android:id="@+id/list_item_rate_thumbnail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:src="@mipmap/ic_launcher"/>

    <TextView
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/list_item_rate_thumbnail"
        android:layout_toEndOf="@id/list_item_rate_thumbnail"
        android:text="United States Dollar"
        android:id="@+id/list_item_rate_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/list_item_rate_name"
        android:textSize="24sp"
        android:text="USD($)"
        android:gravity="center"
        android:layout_below="@id/list_item_rate_description"
        android:layout_toRightOf="@id/list_item_rate_thumbnail"
        android:layout_toEndOf="@id/list_item_rate_thumbnail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/list_item_rate_value"
        android:gravity="end|center"
        android:textSize="32sp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:text="1234.56"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" />

</RelativeLayout>