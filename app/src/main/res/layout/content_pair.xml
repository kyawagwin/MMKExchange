<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_pair"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.passioncreativestudio.mmkexchange.PairActivity"
    tools:showIn="@layout/activity_pair">

    <RelativeLayout
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/content_pair_pCurrencyFlag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/mmk"/>

        <TextView
            android:id="@+id/content_pair_pCurrencyDescription"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:text="Myanmar Kyat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:textStyle="bold"
            android:id="@+id/content_pair_pCurrencyName"
            android:textSize="32sp"
            android:text="MMK"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/content_pair_pCurrencyDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/content_pair_pCurrencyRate"
            android:text="123.22"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/content_pair_pCurrencyName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:inputType="number"
            android:background="@android:color/transparent"
            android:gravity="end"
            android:textAlignment="textEnd"
            android:text="Ks 1234.56"
            android:textStyle="bold"
            android:layout_alignParentBottom="true"
            android:textSize="28sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <View
        android:background="@color/colorPrimaryDark"
        android:layout_width="match_parent"
        android:layout_height="1dp" />

    <RelativeLayout
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/content_pair_sCurrencyFlag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/sgd"/>

        <TextView
            android:id="@+id/content_pair_sCurrencyDescription"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:text="Singapore Dollar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:textStyle="bold"
            android:id="@+id/content_pair_sCurrencyName"
            android:textSize="32sp"
            android:text="SGD"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/content_pair_sCurrencyDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/content_pair_sCurrencyRate"
            android:text="123.22"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/content_pair_sCurrencyName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:inputType="number"
            android:background="@android:color/transparent"
            android:gravity="end"
            android:textAlignment="textEnd"
            android:text="$ 1234.56"
            android:textStyle="bold"
            android:layout_alignParentBottom="true"
            android:textSize="28sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </RelativeLayout>

</LinearLayout>
