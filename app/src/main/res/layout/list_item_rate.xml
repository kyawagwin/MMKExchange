<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_margin="4dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/list_item_rate_thumbnail"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@mipmap/ic_launcher"/>

    <TextView
        android:id="@+id/list_item_rate_rateTextView"
        android:gravity="end|center_vertical"
        android:textStyle="bold"
        android:textSize="42sp"
        android:text="1234.56"
        android:layout_toRightOf="@id/list_item_rate_thumbnail"
        android:layout_toEndOf="@id/list_item_rate_thumbnail"
        android:layout_width="match_parent"
        android:layout_height="64dp" />

</RelativeLayout>